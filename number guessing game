import random

def number_guessing_game():
    print("ğŸ¯ Welcome to the Number Guessing Game!")
    print("\nChoose a difficulty level:")
    print("1ï¸âƒ£ Easy   (10 attempts)")
    print("2ï¸âƒ£ Medium (7 attempts)")
    print("3ï¸âƒ£ Hard   (5 attempts)")

    while True:
        choice = input("\nEnter level (1/2/3): ")
        if choice == "1":
            max_attempts = 10
            close_range = 7
            level = "Easy"
            break
        elif choice == "2":
            max_attempts = 7
            close_range = 5
            level = "Medium"
            break
        elif choice == "3":
            max_attempts = 5
            close_range = 3
            level = "Hard"
            break
        else:
            print("âŒ Invalid choice. Please select 1, 2, or 3.")

    secret_number = random.randint(1, 100)
    attempts = 0
    score = 0

    print(f"\nğŸ”¥ {level} Mode Selected!")
    print("I'm thinking of a number between 1 and 100.")

    while attempts < max_attempts:
        try:
            guess = int(input(f"\nAttempt {attempts + 1}/{max_attempts} - Enter your guess: "))
        except ValueError:
            print("âŒ Please enter a valid number.")
            continue

        if guess < 1 or guess > 100:
            print("âš ï¸ Number must be between 1 and 100.")
            continue

        attempts += 1
        difference = abs(secret_number - guess)

        if guess == secret_number:
            score += 100
            print(f"ğŸ‰ Correct! You guessed the number in {attempts} attempts.")
            print("ğŸ† +100 points!")
            break
        else:
            score -= 10

        if guess < secret_number:
            print("â¬†ï¸ Too low!")
        else:
            print("â¬‡ï¸ Too high!")

        if difference <= close_range:
            score += 5
            print("ğŸ”¥ Hint: So Close! (+5 points)")
        else:
            score -= 5
            print("ğŸ¥¶ Hint: Too Far! (-5 points)")

        print(f"ğŸ“Š Current Score: {score}")

    else:
        print(f"\nğŸ˜¢ Game Over! The number was {secret_number}.")

    print("\nğŸ“‹ Final Result")
    print("â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€")
    print(f"ğŸ¯ Level Played : {level}")
    print(f"ğŸ”¢ Attempts Used: {attempts}/{max_attempts}")
    print(f"â­ Final Score  : {score}")

    if score >= 100:
        print("ğŸ¥‡ Rank: Master Guesser")
    elif score >= 50:
        print("ğŸ¥ˆ Rank: Skilled Player")
    elif score >= 0:
        print("ğŸ¥‰ Rank: Beginner")
    else:
        print("ğŸ’€ Rank: Better Luck Next Time")

    print("\nğŸ‘‹ Thanks for playing!")

# Start the game
number_guessing_game()
